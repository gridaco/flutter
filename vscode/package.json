{
  "name": "grida-flutter",
  "displayName": "grida-flutter",
  "description": "Grida Flutter Support",
  "version": "0.0.1",
  "author": {
    "name": "Grida Inc",
    "email": "hello@grida.co"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gridaco/flutter-support"
  },
  "bugs": {
    "url": "https://github.com/gridaco/flutter-support/issues"
  },
  "keywords": [
    "flutter",
    "design",
    "preview",
    "components"
  ],
  "categories": [
    "Visualization"
  ],
  "activationEvents": [
    "onCommand:grida-flutter.showPreview",
    "onLanguage:dart",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "grida-flutter.showPreview",
        "title": "Preview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "grida-flutter.componentsDetected",
          "command": "grida-flutter.showPreview",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "flutter-ast": "^0.0.3-2",
    "ws": "^8.12.0"
  }
}